@model JobBoard.Web.Models.JobDto

<form asp-action="JobDelete">
    <input asp-for="JobId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Job Offer</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Title" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Title"   class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Requirements" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Requirements"   class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description"   class="form-control" rows="5"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="NiceToHave"  class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="NiceToHave"   class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Duties" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Duties" class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="JobIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
